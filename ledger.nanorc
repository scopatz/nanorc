syntax "Ledger" "(^|\.|/)ledger|ldgr|lg$"

# descriptions
color brightmagenta "^(([0-9]{4}(/|-|.))?[0-9]{2}(/|-|.)[0-9]{2}|[=~]) .*"
# dates
color blue "^([0-9]{4}(\/|-|.))?[0-9]{2}(\/|-|.)[0-9]{2}"
# balance
color brightyellow "^~ .*"
color brightblue "^= .*"
# accounts
color cyan "(\t| )\b\w*\ ?\w*(:\w*\ ?\w*\w*){1,}\b"
# double quotes and transaction flags
color red "[*!@\"]"
# text within double quotes
color pink "\"(.*?)\""
# comments
color brightblack "(^|\s)(;|#|%|\|).*"
